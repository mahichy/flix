<h1>Editing <%= @movie.title%></h1>


<%= form_with(model: @movie) do |f|%>

  <%= f.label :title%>
  <%= f.text_field :title%>

  <%= f.label :description%>
  <%= f.text_area :description, row: 5%>

  <%= f.label :rating%>
  <%= f.text_field :rating%>

  <%= f.label :total_gross%>
  <%= f.number_field :total_gross%>

  <%= f.label :released_on%>
  <%= f.date_select :released_on, {ampm: true}, {class: :date}%>
  <%= f.submit%>
<% end %>