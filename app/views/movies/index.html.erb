<% @movies.each do |movie| %>
  <section class="movie">
  <div class="image">
    <%= main_image(movie) %>
  </div>
    <div class="summary">
      <h2>
        <%= link_to movie.title, movie_path(movie) %>
      </h2>
      <h3>
        <%= total_gross(movie) %>
      </h3>
      <span class="stars">
        <%= average_stars(movie)%>
      </span>
      <p>
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>

<% if current_user_admin?%>
  <section class="admin">
    <%= link_to 'Add New Movies', new_movie_path, class: "btn btn-primary"	%>
  </section>  
<% end %>