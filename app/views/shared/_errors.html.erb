<% if object.errors.any?%>
  <section class="errors">
    <h2>Oops! Your form could not be saved.</h2>

    <h3>
      Plese correct the following:
      <%= pluralize(object.errors.full_messages.size, "error") %>:
    </h3>
    <ul>
      <% object.errors.full_messages.each do |message|%>

        <li><%= message %></li>

      <% end %>
      <li></li>
    </ul>
  </section>


<% end %>