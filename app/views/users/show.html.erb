<section class="user">
  <%= profile_image(@user) %>
  <h1><%= @user.username %></h1>
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <h3>Member Since</h3>
<p>
  <%= @user.created_at.strftime("%B %Y") %>
</p>

<div class="actions">

  <%= link_to "Edit account", edit_user_path(@user), 
    class: "button edit"%>

    <%= link_to "Delete Account", 
    @user, class: "button delete",
    data: {turbo_method: :delete, 
    tubo_confirm: "Permanently deleted your account!?"}%>

</div>
</section>